<% if (nombre == undefined) { %>
	<%- include("partials/header.ejs")%>
	<% } else { %>	
	<%- include("partials/headerRegistrado.ejs")%>
<% } %>
    
    <h1 class="titulos">Usted busco los resultados por la palabra: <%=search[0]%> </h1>
    <%if(search.length==1){%>
        <h2>Lo sentimos, no encontramos ningun resultado para esta busqueda.</h2>
        <h2>Pero podemos recomendarle algunas opciones de busqueda: </h2>
        <br>
        <a href="/busqueda/?search=Marron"><h2>Autos de color Marron</h2></a>
        <br>
        <a href="/busqueda/?search=2020"><h2>Autos del a√±o 2020</h2></a>
        <br>
        <a href="/busqueda/?search=Toyota"><h2>Autos de la marca Toyota</h2></a>
        <br>
        <a href="/busqueda/?search=Cruze"><h2>Autos del modelo Cruze</h2></a>
        <br>
    <%}else{%>
        <h2>los productos que coinciden con su busqueda son los siguientes:</h2>
        <%for(let i=1;i<search.length;i+=1){%>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                        <figure class="product-box_image">
                            <a href="/productos/busqueda/<%=search[i].modelo%>"><img class="imagenproductos" src="<%=search[i].foto%>" alt="<%search[i].marca%>-<%search[i].modelo%>"></a>
                        </figure>
                        <article class="product-box_data">
                            <a href="/productos/busqueda/<%=search[i].modelo%>"><h2><%=search[i].marca%> <%=search[i].modelo%></h2></a>
                            <p><%=search[i].descripcion%></p>
                            <p>Comentarios: <%=search[i].comentarios%></p>
                        </article>
                </section>
            </div>
        <%}%>
    <%}%>

<%- include("partials/footer.ejs")%>