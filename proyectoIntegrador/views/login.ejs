<%- include("partials/header.ejs")%>
<h1 id="registration-page">Login de usuario</h1>
<h2 id="registration-page">¿No tenes cuenta? <a class="link-registration" href="/usuarios/registro">Registrate aquí</a></h2>


<% if(locals.errors){ %>
    <p id="alert"> Los datos son inválidos </p>
<% } %>

<form id="login-form" method="POST" action="/usuarios/login">

    <div class="form-group">
        <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email" name="mail" required>
    </div>

    <div class="form-group">
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña" name="password" required>
    </div>

    <div id="cookies" class="form-group">
        <input id="checkbox" type="checkbox" class="form-control" name="recordame">
        <label id="recordame" for="">Recordame</label>
    </div>
    

    <button type="submit" id="submit-button" class="btn btn-primary"> Confirmar</button>
</form>
<%- include("partials/footer.ejs")%>