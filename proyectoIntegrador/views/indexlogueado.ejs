<%- include("partials/headerRegistrado.ejs")%>
<!-- Banner -->
<div >
    <img src="images/Banner-principal-home.jpg" alt="Banner de ofertas">
</div>
<!-- /Banner -->

<!-- Novedades -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="titulos">Novedades</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <%for(let i=0;i<4;i+=1){%>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                        <figure class="product-box_image">
                            <a href="/productos/busqueda/<%=products.lista[i].modelo%>"><img class="imagenproductos" src="<%=products.lista[i].foto%>" alt="<%products.lista[i].marca%>-<%products.lista[i].modelo%>"></a>
                        </figure>
                        <article class="product-box_data">
                            <a href="/productos/busqueda/<%=products.lista[i].modelo%>"><h2><%=products.lista[i].marca%> <%=products.lista[i].modelo%></h2></a>
                            <p><%=products.lista[i].descripcion%></p>
                            <p>Comentarios: <%=products.lista[i].comentarios%></p>
                        </article>
                </section>
            </div>
        <%}%> 
    </div>
</div>
<!-- /Novedades -->
<!-- Más comentados -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="titulos">Más comentados</h2>
        </div>
        <%for(let i=4;i<8;i+=1){%>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                        <figure class="product-box_image">
                            <a href="/productos/busqueda/<%=products.lista[i].modelo%>"><img class="imagenproductos" src="<%=products.lista[i].foto%>" alt="<%products.lista[i].marca%>-<%products.lista[i].modelo%>"></a>
                        </figure>
                        <article class="product-box_data">
                            <a href="/productos/busqueda/<%=products.lista[i].modelo%>"><h2><%=products.lista[i].marca%> <%=products.lista[i].modelo%></h2></a>
                            <p><%=products.lista[i].descripcion%></p>
                            <p>Comentarios: <%=products.lista[i].comentarios%></p>
                        </article>
                </section>
            </div>
        <%}%> 
    </div>
</div>
<%- include("partials/footer.ejs")%>