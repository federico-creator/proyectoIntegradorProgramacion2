<% if (nombre==null) { %>
    <%- include("partials/header.ejs")%>
<% } else { %>
    <%- include("partials/headerRegistrado.ejs")%>
<% } %>


<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <% if(resultados.avatar!=null){%>
                                <img src="<%= resultados.avatar %>" alt="foto de perfil" class="foto-perfil">
                                <div class="mt-3">
                                    <h4 class="" id="tit-info"><%= resultados.nombre %></h4> 
                                </div>
                            <% }else{%>
                                <img src="/images/users/user 2.jpg" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4 class="" id="tit-info"><%= resultados.nombre %></h4>
                                </div>
                            <% }%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0" id="tit-info">Nombre de usuario</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="texto-info"><%= resultados.nombre %> <%= resultados.apellido %> </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0" id="tit-info">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="texto-info"><%= resultados.mail %></div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0" id="tit-info">Productos cargados</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="texto-info">
                                <% if(resultados.productos==0){%>
                                    Ningún producto creado
                                <% }else{%>
                                    <%= resultados.productos.length%> productos creados
                                <% }%>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0" id="tit-info">Comentarios realizados</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="texto-info">
                                <%if(resultados.comentarios==0){%>
                                    Ningún comentario realizado
                                <%}else{%>
                                    <%= resultados.comentarios.length%> comentarios creados
                                <% }%>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0" id="tit-info">Fecha de registración</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="texto-info"><%= resultados.created_at %></div>
                        </div>
                        <hr>
                    </div>
                </div>

            </div>
        </div>
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Productos cargados por el usuario</h2>
                </div>
                <% if(resultados.productos==0){%>
                    <h1>no existen productos subidos por este usuario</h1>
                <% }else{%>
                    <%for(let i=0;i<resultados.productos.length;i+=1){%> 
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                    <figure class="product-box_image">
                                        <a href="/productos/busqueda/<%=resultados.productos[i].id%>"><img src="<%=resultados.productos[i].foto%>" alt="imagen del auto"></a>
                                    </figure>
                                    <article class="product-box_data">
                                        <a href="/productos/busqueda/<%=resultados.productos[i].id%>"><h2><%=resultados.productos[i].marca%> <%=resultados.productos[i].modelo%></h2></a>
                                        <p>descripción:<%=resultados.productos[i].descripcion%></p>
                                        <p>Comentarios: <%=resultados.comentarios.length%></p>
                                    </article>
                            </section>
                        </div>
                    <%}%>
                <% }%>
            </div>
        </div>

    </div>
</div>
<%- include("partials/footer.ejs")%>